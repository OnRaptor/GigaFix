<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 xmlns:vm="using:GigaFix.ViewModels"
			 x:DataType="vm:LoginViewModel"
             x:Class="GigaFix.Views.LoginView">
	<StackPanel Spacing="6" HorizontalAlignment="Center" VerticalAlignment="Center">
		<TextBox Watermark="Логин" Width="200"/>
		<TextBox PasswordChar="*" Watermark="Пароль"/>
		<Button Command="{Binding Login}" Classes="accent" Content="Вход" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center"/>
		<Button Content="Регистрация" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center"/>
	</StackPanel>
  
</UserControl>
