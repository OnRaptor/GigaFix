<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 xmlns:vm="using:GigaFix.ViewModels"
			 x:DataType="vm:LoginViewModel"
             x:Class="GigaFix.Views.LoginView">
	<StackPanel Spacing="6" Width="200" HorizontalAlignment="Center" VerticalAlignment="Center">
		<TextBox Text="{Binding Login, Mode=TwoWay}" Watermark="Логин" HorizontalAlignment="Stretch"/>
		<TextBox Text="{Binding Password, Mode=TwoWay}" PasswordChar="*" Watermark="Пароль" HorizontalAlignment="Stretch"/>
		<Button IsVisible="{Binding CanLogin, Mode=OneWay}" Margin="5,0" Command="{Binding StartLogin}" Classes="Flat Rounded" Content="Вход" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center"/>
	</StackPanel>
  
</UserControl>
