<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             xmlns:vm="using:GigaFix.ViewModels.MainViews"
             xmlns:controls="clr-namespace:SukiUI.Controls;assembly=SukiUI"
             x:DataType="vm:AddOrderViewModel"
             x:Class="GigaFix.Views.MainViews.AddOrderView">
    <controls:GlassCard HorizontalAlignment="Center" HorizontalContentAlignment="Center" VerticalAlignment="Center">
        <StackPanel Spacing="5" MinWidth="350">
            <TextBox HorizontalAlignment="Stretch" Watermark="Оборудование, которое требует ремонта"/>
            <TextBox HorizontalAlignment="Stretch" Watermark="Тип неисправности"/>
            <TextBox HorizontalAlignment="Stretch" Watermark="Клиент, который подал заявку"/>
            <TextBox HorizontalAlignment="Stretch" Watermark="Статус заявки"/>
            <Button Classes="Rounded Flat" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center">Добавить</Button>
        </StackPanel>
    </controls:GlassCard>
</UserControl>
